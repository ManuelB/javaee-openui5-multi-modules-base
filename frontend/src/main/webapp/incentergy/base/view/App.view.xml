<mvc:View height="100%" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:f="sap.f" xmlns:cards="sap.f.cards" xmlns:tnt="sap.tnt" xmlns:vega="incentergy.base.vega"
	controllerName="incentergy.base.view.App">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<f:ShellBar title="Java EE OpenUI5 Module System"
				secondTitle="Running on wildfly" showMenuButton="true"
				homeIcon="./img/logo_ui5.png" showCopilot="false"
				showNotifications="false" menuButtonPressed="onMenuButtonPress"
				showProductSwitcher="false" notificationsNumber="0">
				<f:profile>
					<f:Avatar src="{JWT>/img}" />
				</f:profile>
				<f:searchManager>
					<f:SearchManager enableSuggestions="true"
						search="onSearch" />
				</f:searchManager>
			</f:ShellBar>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation expanded="true"
				itemSelect="onItemSelect">
				<tnt:NavigationList
					items="{path: 'Menu>/NavigationListItems',
			        sorter: {
			            path: 'Sort'
			        },
			        filters : [
			            { path : 'TopLevelItem', operator : 'EQ', value1 : true}
			        ],
			        templateShareable: false
			        }">
					<tnt:NavigationListItem text="{Menu>Text}"
						key="{Menu>Id}" icon="{Menu>Icon}" items="{path: 'Menu>Children', templateShareable: false}" expanded="false">
						<tnt:NavigationListItem text="{Menu>Text}"
							key="{Menu>Id}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="navContainer">
				<pages>
					<f:GridContainer id="gridContainer"
						class="sapUiSmallMargin" items="{Cards>/}">
						<f:layout>
							<f:GridContainerSettings rowSize="8rem"
								columnSize="20rem" gap="1rem" />
						</f:layout>
						<f:layoutXS>
							<f:GridContainerSettings rowSize="7rem"
								columnSize="7rem" gap="1rem" />
						</f:layoutXS>
						<f:items>
							<f:Card>
								<f:header>
									<cards:Header title="{Cards>header/title}" subtitle="{Cards>header/subTitle}" iconSrc="{Cards>header/icon/src}" statusText="{Cards>header/status/text}"></cards:Header>
								</f:header>
								<f:content>
									<vega:Vega content="{Cards>content}" />
								</f:content>
							</f:Card>
						</f:items>
					</f:GridContainer>
				</pages>
			</NavContainer>
		</tnt:mainContents>
		<tnt:dependents>
			<ResponsivePopover id="searchResult"
				placement="Bottom">
				<List id="searchResultList">

				</List>
			</ResponsivePopover>
		</tnt:dependents>
	</tnt:ToolPage>
</mvc:View>
